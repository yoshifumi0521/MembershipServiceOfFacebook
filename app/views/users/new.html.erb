
<h1>新規ユーザー登録</h1>


<%= form_for @user do |form| %>
  <table>
    <tr>
      <th>プロフィール画像</th>
      <td><image src="<%= @user.imageurl %>"></td>
    </tr>

    <tr>
      <th>名前</th>
      <td><%= @user.name %></td>
    </tr>

    <tr>
      <th><%= form.label :mailadress,"メールアドレス" %></th>
      <td><%= form.text_field :mailadress %></td>
    </tr>

    <tr>
      <th><%= form.label :paypalnumber,"ペイパル情報" %></th>
      <td><%= form.text_field :paypalnumber %></td>
    </tr>

  </table>
  <p><%= form.submit  %></p>
<% end %>








